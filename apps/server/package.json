    "@trpc/server": "^11.5.0",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.8.2",
    "pg": "^8.16.3",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@andika/typescript-config": "workspace:*",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2"
  }
